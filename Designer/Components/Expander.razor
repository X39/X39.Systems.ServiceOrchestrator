<div class="accordion">
    <div class="accordion-header" @onclick="AccordionHeaderClicked">
        @Header
    </div>
    <div class="accordion-content @(IsVisible ? "" : "collapsed")">
        @Content
    </div>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public RenderFragment? Header { get; set; }
    
    [Parameter]
    [EditorRequired]
    public RenderFragment? Content { get; set; }

    private void AccordionHeaderClicked()
    {
        IsVisible = !IsVisible;
    }

    public bool IsVisible { get; private set; } = false;

}